<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_activity_background">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNewGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ee0000"
        android:text="New Grid"
        android:background="@drawable/common_widget_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BINGO"
        android:padding="10dp"
        android:backgroundTint="#00ee00"
        android:background="@drawable/common_widget_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        android:textSize="40sp"
        android:textColor="#ffffff"/>



    <LinearLayout
        android:layout_width="wrap_content"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.55"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/textViewsContainer">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="15dp"
            android:background="@drawable/yellow_letter_background"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="14dp"
            android:background="@drawable/yellow_letter_background" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="14dp"
            android:background="@drawable/yellow_letter_background" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="14dp"
            android:background="@drawable/yellow_letter_background" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="14dp"
            android:background="@drawable/yellow_letter_background" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="14dp"
            android:background="@drawable/yellow_letter_background" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the number of rows"
        android:textColor="#000"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41" />
</androidx.constraintlayout.widget.ConstraintLayout>